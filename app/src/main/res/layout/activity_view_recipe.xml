<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cookhelper.cookhelper.ViewRecipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Name of Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameOfDish"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/imgViewRecipe" />

            <TextView
                android:text="Ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idIngredients"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/listIng"
                android:enabled="false"
                android:editable="false" />

            <TextView
                android:text="Directions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameDirections"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/listDirections"
                android:enabled="false"
                android:editable="false" />

            <TextView
                android:text="More Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/moreInfo"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/listInfo"
                android:enabled="false"
                android:editable="false" />

            <Button
                android:text="Edit this Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnEditRecipe"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <Button
                android:text="Delete Recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteRecipe"
                android:onClick="onClickDeleteRecipe" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
